{
  "extends": "../tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "types": ["cypress", "node"],
    "noEmit": false,
    "paths": {
      "@src/*": [
        "../src/*"
      ],
      "@util/*": [
        "util/*"
      ]
    },
  },
  "include": [
    "**/*.ts",
    "config/types/**/*"
  ],
  "exclude": [
    "**/templates/**",
    "node_modules",
  ]
}
